{
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "for",
          "function",
          "if",
          "else",
          "each",
          "include",
          "mixin",
          "warn",
          "return"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["content-visibility", "contain-intrinsic-size"]
      }
    ]
  },
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"]
}
